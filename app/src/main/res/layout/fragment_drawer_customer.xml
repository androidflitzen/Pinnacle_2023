<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_30dp">

            <ImageView
                android:id="@+id/imgMenuTop"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_menu"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:tint="@color/dark_blue_color"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone"
                >

            </ImageView>

            <LinearLayout
                android:id="@+id/linHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:visibility="gone">

                <com.flitzen.pinnacle.utils.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user">

                </com.flitzen.pinnacle.utils.CircleImageView>

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tapesh Mahananda"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textSize="@dimen/_18dp"
                    android:textColor="@color/dark_blue_color"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txtUserRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store In charge"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textSize="@dimen/_12dp"
                    android:textColor="@color/light_blue_icon_color">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linOpenDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:id="@+id/imgMenuBottom"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:src="@drawable/ic_menu"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:tint="@color/dark_blue_color">

                </ImageView>

                <LinearLayout
                    android:id="@+id/linHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_25dp">

                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtHome"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/menu_home"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linMyMachines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgMyMachines"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_my_machines"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtMyMachines"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/my_machines"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linServiceRequesr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgServiceRequesr"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_delivered_order"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtServiceRequesr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/service_request"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linProblemSolving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProblemSolving"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_problem_solving"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtProblemSolving"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/problem_solving"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linNewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgNewProducts"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_new_product"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtNewProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/new_products"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSettings"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/settings"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLogout"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_logout"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/logout"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linCloseDrawer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:id="@+id/imgMenuBottom1"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:src="@drawable/ic_menu"
                    android:layout_gravity="center"
                    android:foreground="?attr/selectableItemBackground"
                    android:tint="@color/dark_blue_color">

                </ImageView>

                <LinearLayout
                    android:id="@+id/linHome1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_25dp">

                    <ImageView
                        android:id="@+id/imgHome1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_home"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtHome1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/menu_home"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linMyMachines1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgMyMachines1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_my_machines"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtMyMachines1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/my_machines"
                        android:textColor="@color/light_blue_icon_color"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linServiceRequesr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgServiceRequesr1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_delivered_order"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtServiceRequesr1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/service_request"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linProblemSolving1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgProblemSolving1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_problem_solving"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtProblemSolving1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/problem_solving"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linNewProducts1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgNewProducts1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_new_product"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtNewProducts1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/new_products"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linSettings1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgSettings1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtSettings1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/settings"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLogout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgLogout1"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:src="@drawable/ic_logout"
                        android:tint="@color/light_blue_icon_color">

                    </ImageView>

                    <TextView
                        android:id="@+id/txtLogout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/logout"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/light_blue_icon_color"
                        android:textSize="@dimen/_18dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>