<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCrate"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/light_black_round_corner_1"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <ImageView
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/ic_crate">

            </ImageView>

            <TextView
                android:id="@+id/txtCrateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Crate Name"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_19dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txtCrateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Total Item : 0"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_19dp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_10dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>