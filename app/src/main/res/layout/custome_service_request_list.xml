<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5dp"
    android:paddingBottom="@dimen/_10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/linOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="@drawable/light_black_round_corner_1"
                android:backgroundTint="@color/red">

                <TextView
                    android:id="@+id/txtOrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/pending"
                    android:textSize="@dimen/_15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:firstBaselineToTopHeight="0dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:includeFontPadding="false"
                    android:rotation="270">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:paddingBottom="@dimen/_10dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electrical Service Request For"
                            android:textSize="@dimen/_12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/light_blue_icon_color">

                        </TextView>

                        <TextView
                            android:id="@+id/txtItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Glide O Bind"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15dp"
                            android:layout_marginTop="@dimen/_2dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textColor="@color/dark_blue_color"
                            android:paddingBottom="@dimen/_10dp">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_toRightOf="@id/txtDashboardTitle">

                            <ImageView
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="@dimen/_20dp"
                                android:src="@drawable/ic_clock"
                                android:tint="@color/login_bg_color"
                                android:layout_gravity="center">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="08 Sept 2021,"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:textSize="@dimen/_12dp"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/light_blue_icon_color"
                                >

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=" 3:55 pm"
                                android:textSize="@dimen/_12dp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:textColor="@color/black"
                                >

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linShortage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnShortage"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30dp"
                        android:text="@string/engineer_assigned"
                        android:background="@drawable/light_black_round_corner_1"
                        android:backgroundTint="@color/blue"
                        android:textSize="@dimen/_13dp"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/_8dp"
                        android:paddingRight="@dimen/_8dp">

                    </androidx.appcompat.widget.AppCompatButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tapesh Mahananda"
                        android:textSize="@dimen/_12dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5dp"
                        android:paddingTop="@dimen/_6dp"
                        android:textColor="@color/black">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_gravity="bottom|center"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_18dp"
                            android:layout_height="@dimen/_18dp"
                            android:src="@drawable/ic_telephone"
                            android:layout_gravity="center"
                            android:tint="@color/login_bg_color">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 12345 67890"
                            android:textSize="@dimen/_12dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:background="@drawable/light_black_round_corner_1"
                android:gravity="center"
                android:backgroundTint="@color/green_box_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/request_no"
                    android:textSize="@dimen/_15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">

                </TextView>

                <TextView
                    android:id="@+id/txtBom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SR100"
                    android:textSize="@dimen/_15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">

                </TextView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>