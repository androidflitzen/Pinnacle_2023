<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_5dp"
    android:paddingBottom="@dimen/_5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:background="@drawable/light_black_round_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerItemType"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtPartCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PLC001"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:textColor="@color/dark_blue_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="0.7"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtPartName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="PLC FOR THERMAL MACHINE (16)"
                    android:maxLines="2"
                    android:textAlignment="textStart"
                    android:layout_gravity="center"
                    android:textColor="@color/dark_blue_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1.06"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtRequiredQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1.06"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtDeliveredQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/green_box_color"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1.06"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtBalancedQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1.06"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtInStockQty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1.06"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:text="ADD"
                    android:background="@drawable/light_black_round_corner_1"
                    android:backgroundTint="@color/green_box_color"
                    android:textSize="@dimen/_10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/white">

                </androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>