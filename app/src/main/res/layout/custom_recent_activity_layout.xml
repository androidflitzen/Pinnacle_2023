<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_5dp"
    android:paddingBottom="@dimen/_10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#EDEFF0"
        android:background="@drawable/light_black_round_corner"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10dp">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPerson"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/ic_user"
                    android:tint="@color/light_blue_icon_color">

                </ImageView>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textSize="@dimen/_15dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3:55 pm"
                    android:textSize="@dimen/_15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/light_blue_icon_color"
                    android:gravity="right">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtActivityStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivered 10 Items to assembly for Order 104"
                    android:textSize="@dimen/_12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/light_black_2"
                    android:layout_gravity="center"
                    android:layout_weight="0.7">

                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:layout_gravity="right|center"
                    android:gravity="right|center">

                    <RelativeLayout
                        android:id="@+id/btnViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/light_black_round_corner_1"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="@color/green_box_color"
                        android:paddingLeft="@dimen/_10dp"
                        android:paddingRight="@dimen/_10dp"
                        android:paddingTop="@dimen/_5dp"
                        android:paddingBottom="@dimen/_5dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:textSize="@dimen/_12dp">

                        </TextView>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>