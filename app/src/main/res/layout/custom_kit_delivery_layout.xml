<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/light_black_round_corner_1"
        android:backgroundTint="@color/green_box_color"
        android:layout_marginLeft="@dimen/_10dp"
        android:paddingTop="@dimen/_7dp"
        android:paddingBottom="@dimen/_7dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingLeft="@dimen/_5dp">

        <TextView
            android:id="@+id/txtKitName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kit Delivery 1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center">

        </TextView>

    </LinearLayout>

</LinearLayout>