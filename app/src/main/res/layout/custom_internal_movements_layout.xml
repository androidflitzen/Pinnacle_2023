<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5dp"
    android:paddingBottom="@dimen/_5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/light_black_round_corner"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/_10dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:paddingBottom="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtDashboardTitle"
                android:gravity="center|start"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/login_bg_color">

                </ImageView>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:gravity="center"
                    android:text="08 Sept 2021,"
                    android:textColor="@color/light_blue_icon_color"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12dp">

                </TextView>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 3:55 pm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:textSize="@dimen/_12dp">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtItemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item(s)"
                        android:textColor="@color/light_blue_icon_color"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_12dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crate- D002"
                            android:textColor="@color/dark_blue_color"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/_12dp">

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Moved to "
                            android:textColor="@color/green_box_color"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/_12dp">

                        </TextView>

                        <TextView
                            android:id="@+id/txtTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crate- D001"
                            android:textColor="@color/dark_blue_color"
                            android:fontFamily="@font/montserrat_semibold"
                            android:textSize="@dimen/_12dp">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10dp">

                    <TextView
                        android:id="@+id/txtItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEARING HK-3016 NEEDLE"
                        android:textColor="@color/dark_blue_color"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_15dp"
                        android:textStyle="bold">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/relShowMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtShowMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show More"
                            android:textSize="@dimen/_15dp"
                            android:textColor="@color/blue">

                        </TextView>

                        <View
                            android:layout_width="@dimen/_77dp"
                            android:layout_height="@dimen/_1dp"
                            android:layout_below="@id/txtShowMore"
                            android:background="@color/blue">

                        </View>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>