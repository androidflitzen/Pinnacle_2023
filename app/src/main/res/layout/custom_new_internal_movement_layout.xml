<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:paddingTop="@dimen/_10dp"
    android:paddingBottom="@dimen/_10dp">

    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BEARING HK-3016 NEEDLE"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:textColor="@color/dark_blue_color"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="@dimen/_12dp">

    </TextView>

    <TextView
        android:id="@+id/txtItemQTY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_weight="1.3"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:gravity="right"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="@dimen/_12dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:layout_gravity="right"
        android:gravity="right"
        >

        <ImageView
            android:id="@+id/imgMinus"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:src="@drawable/ic_minus"
            android:tint="@color/dark_blue_color"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/plus_minus_circle">

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            >

            <EditText
                android:id="@+id/editItemQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/dark_blue_color"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_12dp">

            </EditText>

            <View
                android:layout_width="@dimen/_30dp"
                android:layout_height="1dp"
                android:background="@color/dark_blue_color">

            </View>


        </LinearLayout>

        <ImageView
            android:id="@+id/imgPlus"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:src="@drawable/ic_plus"
            android:background="@drawable/plus_minus_circle"
            android:foreground="?attr/selectableItemBackground"
            android:tint="@color/dark_blue_color">

        </ImageView>

    </LinearLayout>

</LinearLayout>