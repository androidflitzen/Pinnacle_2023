<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF0">

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_20dp">

            <LinearLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relBack"
                    android:layout_width="@dimen/_35dp"
                    android:layout_height="@dimen/_35dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_left_arrow"
                        android:tint="@color/dark_blue_color">

                    </ImageView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtDashboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@id/relBack"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/purchase_orders"
                    android:textColor="@color/dark_blue_color"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/_20dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <TextView
                android:id="@+id/recyclerPendingOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/rel1"
                android:text="Coming Soon..."
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/green_box_color"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:layout_centerInParent="true">

            </TextView>

        </RelativeLayout>

   <!-- </ScrollView>-->

</RelativeLayout>