<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDEFF0"
    android:padding="@dimen/_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relBack"
                    android:layout_width="@dimen/_35dp"
                    android:layout_height="@dimen/_35dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_left_arrow"
                        android:tint="@color/dark_blue_color">

                    </ImageView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtDashboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@id/relBack"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/job_works"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="@dimen/_20dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/ic_job_work"
                android:tint="@color/dark_blue_color"
                >

            </ImageView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_30dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPending"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/light_black_round_corner"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnPending"
                                android:layout_width="@dimen/_90dp"
                                android:layout_height="@dimen/_25dp"
                                android:background="@drawable/light_black_round_corner_2"
                                android:backgroundTint="@color/login_bg_color"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="09"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/white">

                            </androidx.appcompat.widget.AppCompatButton>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pending"
                                android:textSize="@dimen/_20dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="for sending"
                                android:textSize="@dimen/_15dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardInProgress"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/light_black_round_corner"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnInProgress"
                                android:layout_width="@dimen/_90dp"
                                android:layout_height="@dimen/_25dp"
                                android:background="@drawable/light_black_round_corner_2"
                                android:backgroundTint="@color/login_bg_color"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="09"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/white">

                            </androidx.appcompat.widget.AppCompatButton>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/in_progress"
                                android:textSize="@dimen/_20dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/job_works"
                                android:textSize="@dimen/_15dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_20dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDelivered"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/light_black_round_corner"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnDelayed"
                                android:layout_width="@dimen/_90dp"
                                android:layout_height="@dimen/_25dp"
                                android:background="@drawable/light_black_round_corner_2"
                                android:backgroundTint="@color/red"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="09"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/white">

                            </androidx.appcompat.widget.AppCompatButton>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delayed"
                                android:textSize="@dimen/_20dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/job_works"
                                android:textSize="@dimen/_15dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/light_black_round_corner"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnCompleted"
                                android:layout_width="@dimen/_90dp"
                                android:layout_height="@dimen/_25dp"
                                android:background="@drawable/light_black_round_corner_2"
                                android:backgroundTint="@color/green_box_color"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:text="09"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/white">

                            </androidx.appcompat.widget.AppCompatButton>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/completed"
                                android:textSize="@dimen/_20dp"
                                android:textColor="@color/green_box_color"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/job_works"
                                android:textSize="@dimen/_15dp"
                                android:textColor="@color/dark_blue_color"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingLeft="@dimen/_10dp"
                                android:layout_marginLeft="@dimen/_5dp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            </ScrollView>

        </LinearLayout>

</LinearLayout>